{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "airbnb",
    "airbnb-typescript",
    "eslint:recommended",
    "next/core-web-vitals",
    "plugin:react/recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended",
    "plugin:react-hooks/recommended"
  ],
  "overrides": [],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "plugins": [
    "react",
    "@typescript-eslint",
    "simple-import-sort"
  ],
  "rules": {
    "import/order": [
      "off"
    ], // disabled for simple-import-sort plugin
    "react/function-component-definition": [
      "error",
      {
        "namedComponents": "arrow-function",
        "unnamedComponents": "arrow-function"
      }
    ],
    "no-console": [
      "error",
      {
        "allow": [
          "error"
        ]
      }
    ],
    "react/require-default-props": [
      "off"
    ], // off since we have typescript instead
    "no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_$"
      }
    ],
    "simple-import-sort/imports": [
      "error",
      {
        "groups": [
          [
            // react based packages
            "^react",
            // packages
            "^@?\\w",
            // absolute imports
            "^(assets|components|contexts|dummy|pages|styles|types|utils)",
            // absolute path or other imports that is not matched by the other groups
            "^",
            // relative imports
            "^\\.",
            // side effect imports
            "^\\u0000"
          ]
        ]
      }
    ],
    "simple-import-sort/exports": [
      "error"
    ],
    "jsx-a11y/click-events-have-key-events": [
      "off"
    ],
    "jsx-a11y/media-has-caption": [
      "off"
    ],
    "@typescript-eslint/no-misused-promises": [
      "error",
      {
        "checksVoidReturn": false
      }
    ],
    "@typescript-eslint/no-explicit-any": [
      "error"
    ],
    "@typescript-eslint/no-unsafe-member-access": [
      "error"
    ],
    "@typescript-eslint/no-unsafe-assignment": "error",
    "@typescript-eslint/no-floating-promises": [
      "off"
    ],
    "import/prefer-default-export": [
      "off"
    ],
    "@typescript-eslint/consistent-type-imports": [
      "error"
    ],
    "react/jsx-props-no-spreading": [
      "off"
    ]
  }
}