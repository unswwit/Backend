{
	"env": {
		"commonjs": true,
		"es2021": true,
		"node": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": "latest"
	},
	"rules": {
		"max-lines-per-function": ["error", 20],
		"no-unused-vars": ["error"],
		"quotes": ["error", "single"],
		"max-depth": ["error", 4],
		"indent": ["error", "spaces"],
		"max-len": ["error", 80]
	}
}
